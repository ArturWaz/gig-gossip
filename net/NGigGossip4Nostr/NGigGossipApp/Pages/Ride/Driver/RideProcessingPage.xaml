<?xml version="1.0" encoding="utf-8" ?>
<base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:base="clr-namespace:GigMobile.Pages"
               xmlns:viewModel="clr-namespace:GigMobile.ViewModels.Ride.Driver"
               x:DataType="viewModel:RideProcessingViewModel"
               x:TypeArguments="viewModel:RideProcessingViewModel"
               x:Class="GigMobile.Pages.Ride.Driver.RideProcessingPage"
               Title=" 🚖  Ride Approved">
    <StackLayout VerticalOptions="FillAndExpand" Padding="24" Spacing="24">
        <Label Text="Start the Journey!" FontSize="Title" HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="Rider: John Doe" HorizontalOptions="Start"/>
            <Label Text="Destination: Central Park" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
        <Button Text="🧭 Open Navigation 🧭 " HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="[Start Dispute]" HorizontalOptions="Start" />
            <Button Text="[Contact Rider]" HorizontalOptions="EndAndExpand" />
        </StackLayout>
    </StackLayout>
</base:BasePage>
