<?xml version="1.0" encoding="utf-8" ?>
<base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:base="clr-namespace:GigMobile.Pages"
               xmlns:viewModel="clr-namespace:GigMobile.ViewModels.Wallet"
               x:Class="GigMobile.Pages.Wallet.AddWalletPage"
               x:DataType="viewModel:AddWalletViewModel"
               x:TypeArguments="viewModel:AddWalletViewModel">
    <StackLayout VerticalOptions="FillAndExpand" Padding="24" Spacing="24">
        <Label Text="Add Lightning Wallet" FontSize="Title" HorizontalOptions="Center" VerticalOptions="Start"/>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Spacing="24">
            <Label Text="Enter domain name of your LND wallet provider:" HorizontalOptions="Start" VerticalOptions="Center"/>
            <Entry Text="{Binding WalletDomain}" Placeholder="LND wallet's domain" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
            <Button Text="Save domain" Command="{Binding AddWalletCommand}" VerticalOptions="Center" HorizontalOptions="Center"/>
        </StackLayout>
    </StackLayout>
</base:BasePage>
