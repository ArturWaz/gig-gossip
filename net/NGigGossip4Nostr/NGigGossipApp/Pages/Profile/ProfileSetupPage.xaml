<?xml version="1.0" encoding="utf-8" ?>
<base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:base="clr-namespace:GigMobile.Pages"
               xmlns:viewModel="clr-namespace:GigMobile.ViewModels.Profile"
               x:Class="GigMobile.Pages.Profile.ProfileSetupPage"
               x:DataType="viewModel:ProfileSetupViewModel"
               x:TypeArguments="viewModel:ProfileSetupViewModel"
               HasNavigationBar="False">
    <StackLayout VerticalOptions="Center" Spacing="48" Margin="48">
        <Image Source="logo_no_background" HeightRequest="90" Aspect="AspectFit"/>
        <Label Text="Setup your profile" FontSize="Body" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
        <StackLayout Spacing="16" HorizontalOptions="Center">
            <Button Text="Login with your private key" HorizontalOptions="CenterAndExpand"
                    Command="{Binding LoginCommand}"/>
            <Button Text="Create new profile" HorizontalOptions="FillAndExpand"
                    Command="{Binding CreateCommand}"/>
        </StackLayout>
        <Button Text="Recover existing profile"
                HorizontalOptions="Center" VerticalOptions="End"
                Command="{Binding RecoverCommand}" Style="{StaticResource SecondaryButton}"/>
    </StackLayout>
</base:BasePage>
