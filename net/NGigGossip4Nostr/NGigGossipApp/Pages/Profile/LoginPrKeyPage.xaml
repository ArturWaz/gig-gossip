<?xml version="1.0" encoding="utf-8" ?>
<base:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:base="clr-namespace:GigMobile.Pages"
               xmlns:viewModel="clr-namespace:GigMobile.ViewModels.Profile"
               x:Class="GigMobile.Pages.Profile.LoginPrKeyPage"
               x:DataType="viewModel:LoginPrKeyViewModel"
               x:TypeArguments="viewModel:LoginPrKeyViewModel"
               Title=" 🔒 Login With Your PrivKey"
               HasNavigationBar="True">
    <StackLayout VerticalOptions="FillAndExpand" Padding="24" Spacing="48">
        <Label Text="Login with your key" FontSize="Title" HorizontalOptions="Start" VerticalOptions="Start"/>
        <StackLayout Spacing="16" VerticalOptions="CenterAndExpand">
            <Label Text="Enter your private key:" FontSize="Body" HorizontalOptions="Start" VerticalOptions="Start"/>
            <Entry Placeholder="Private key" Text="{Binding PrivateKey}" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <Button Text="Next" Style="{StaticResource SecondaryButton}" Command="{Binding LoginCommand}" VerticalOptions="EndAndExpand" HorizontalOptions="End"/>
    </StackLayout>
</base:BasePage>
